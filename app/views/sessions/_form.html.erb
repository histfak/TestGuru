<%= form_with url: sessions_path, local: true do |form| %>
  <%= flash_message(:alert) %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </p>

  <p>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </p>

  <%= form.submit 'Enter' %>
<% end %>
