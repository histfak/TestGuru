<div class="container">
  <h1 class="text-center"><%= t('.achieved') %></h1>
  <div class="row">
    <table class="table table-hover table-condensed">
      <% if @badges_achieved.any? %>
        <%= render @badges_achieved %>
      <% else %>
        <tr class="text-center"><td><b><%= t('.no_badges') %></b></td></tr>
      <% end %>
    </table>
  </div>
  <h1 class="text-center"><%= t('.available') %></h1>
  <div class="row">
    <table class="table table-hover table-condensed">
      <%= render @badges_available %>
    </table>
  </div>
</div>