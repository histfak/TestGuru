<h1><%= t('.header') %></h1>
<div class="row mt-3">
  <p><%= link_to t('links.new_test'), new_admin_test_path %></p>

  <%= render 'shared/errors', resource: @test %>

  <table class="table table-hover table-condensed">
    <tr>
      <th class="sort-by-title pointer">
        <%= t('.title') %>
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th class="text-center"><%= t('.level') %></th>
      <th class="text-center"><%= t('.questions') %></th>
      <th class="text-center"><%= t('.timer') %></th>
      <th colspan="3" class="text-center"><%= t('.actions') %></th>
    </tr>

    <%= render @tests %>
  </table>
</div>
